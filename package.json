{
  "name": "eduretain",
  "version": "1.0.0",
  "description": "Plataforma Escalable para Detección de Deserción y Comunicación Educativa",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "deploy:dev": "npm run deploy:dev --workspace=infrastructure",
    "deploy:prod": "npm run deploy:prod --workspace=infrastructure",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "clean": "npm run clean --workspaces",
    "bootstrap": "npm install && npm run build --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "education",
    "student-retention",
    "aws",
    "serverless",
    "ai",
    "campaigns"
  ],
  "author": "CloudHesive",
  "license": "UNLICENSED"
}